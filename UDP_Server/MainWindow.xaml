<Window x:Class="UDP_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_Server"
        mc:Ignorable="d"
       Title="UDP Server" Height="240" Width="500" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="120" Margin="33,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding MessageBox}" Width="428" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="label" Content="Message" HorizontalAlignment="Left" Margin="33,7,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>